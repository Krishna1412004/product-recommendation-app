{
  "version": 2,
  "builds": [
    {
      "src": "backend/main-simple.py",
      "use": "@vercel/python"
    },
    {
      "src": "frontend/package.json",
      "use": "@vercel/static-build",
      "config": {
        "distDir": "build"
      }
    }
  ],
  "rewrites": [
    {
      "source": "/api/(.*)",
      "destination": "/backend/main-simple.py"
    },
    {
      "source": "/recommend",
      "destination": "/backend/main-simple.py"
    },
    {
      "source": "/analytics", 
      "destination": "/backend/main-simple.py"
    },
    {
      "source": "/test",
      "destination": "/backend/main-simple.py"
    },
    {
      "source": "/(.*)",
      "destination": "/frontend/build/index.html"
    }
  ]
}